/**
 * print_binary - Print the binary representation of a number
 * @n: The number
 */
void print_binary(unsigned long int n)
{


	if (n == 0)
	{
		_putchar('0');
		return;
	}
	if (n == 1)
	{
		_putchar('1');
	}

}


